<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>EventLastsAtleastADay</fullName>
    <active>true</active>
    <errorConditionFormula>(End_Date_Time__c -  Start_DateTime__c) &lt; 1</errorConditionFormula>
    <errorMessage>Event has to be atleast one day long.</errorMessage>
</ValidationRule>
