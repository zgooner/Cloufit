<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>InPersonHaveLocation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Event_Type__c, &quot;In-Person&quot;),  ISBLANK( Location__c ))</errorConditionFormula>
    <errorMessage>In-Person type of event needs its location.</errorMessage>
</ValidationRule>
